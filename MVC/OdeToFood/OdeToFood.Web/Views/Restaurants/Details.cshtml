@model OdeToFood.Web.Models.RestaurantViewModel

@{
    ViewBag.Title = "Details";
    var rId = Model.Id;

}

<h2>Details for @Model.Name</h2>
<script type="text/javascript">


</script>
<div>
    <h4>Restaurant</h4>
    <hr />
    <a class="" onclick="location.href='@Url.Action("Edit", "Restaurants", new { Id = Model.Id}, null )'">Edit Restaurant</a>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
            @Html.HiddenFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Desc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Desc)
        </dd>
        <dt>
            @Html.LabelFor(model => model.cuisineTypeID, htmlAttributes: new { @class = "" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CuisineText)
            @Html.HiddenFor(model => model.cuisineTypeID)

        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RestaurantImages)
        </dt>

        <dd>
            @foreach (var item in Model.RestaurantImages)
            {
                var base64 = Convert.ToBase64String(item.ImageFile);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                <img src='@imgSrc' style="max-width:100px; max-height:100px;" />
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
