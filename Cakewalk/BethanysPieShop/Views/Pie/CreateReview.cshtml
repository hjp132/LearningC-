@model ReviewViewModel

<h4>Create a review</h4>
<form asp-controller="Pie" asp-action="CreateReview" method="post">
    <div class="form__container">
        <fieldset class="form__holder">
            <div class="form__item">
                @Html.DisplayNameFor(m => m.Title)
                @Html.TextBoxFor(m => m.Title)
                @Html.ValidationMessageFor(m => m.Title)
            </div>
            @*<div class="form__item">
                    @Html.LabelFor(m => m.Rating)
                    @Html.EditorFor(m => m.Rating)
                </div>*@
            @Html.DisplayNameFor(m => m.Rating)
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
            <div class="rating">
                <span><input type="radio" name="rating" id="str5" value="5"><label for="str5"></label></span>
                <span><input type="radio" name="rating" id="str4" value="4"><label for="str4"></label></span>
                <span><input type="radio" name="rating" id="str3" value="3"><label for="str3"></label></span>
                <span><input type="radio" name="rating" id="str2" value="2"><label for="str2"></label></span>
                <span><input type="radio" name="rating" id="str1" value="1"><label for="str1"></label></span>
                @Html.ValidationMessageFor(m => m.Rating)
            </div>
            
            <div class="form__item">
                @Html.DisplayNameFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description)
                @Html.ValidationMessageFor(m => m.Description)
            </div>
            <div class="form__item last">
                @Html.HiddenFor(m => m.PieId)
            </div>
            <input class="btn btn-primary" type="submit" value="Create" />
        </fieldset>
    </div>
</form>

<script src="~/lib/js/frontend.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>


