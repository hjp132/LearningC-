@model Pie

@{
    var preImg = Model.ImageFileToDisplay;
    var base64 = Convert.ToBase64String(preImg);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
}


<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@imgSrc" alt="">
        <div class="caption">
            <h3>
                <a asp-controller="Pie"
                   asp-action="Details"
                   asp-route-id="@Model.PieId">@Model.Name</a>
            </h3>
            <h3>@Model.Price.ToString("c")</h3>
            <h4>Score: @(Model.ReviewScore.HasValue ? Model.ReviewScore.ToString() : "To Be scored")</h4>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary btn-save"
                   asp-controller="Admin"
                   asp-action="Edit"
                   asp-route-id="@Model.PieId">Edit Pie</a>
            </p>
        </div>
    </div>
</div>